extends layouts/main

block content
    if errorMessage
            span.errorMessage=errorMessage
    form(method="post" enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar" accept="image/*")
        input(type="text", placeholder="Name", name="name", value=loggedInUser.name)
        input(type="text", placeholder="Username", name="username", value=loggedInUser.username)
        input(type="email", placeholder="Email", name="email", value=loggedInUser.email)
        input(type="text", placeholder="Location", name="location", value=loggedInUser.location)
        input(type="submit", value="Update Profile")
        if !loggedInUser.githubOnly
            hr
            a(href=`/users/change-password`) Change Password &rarr;