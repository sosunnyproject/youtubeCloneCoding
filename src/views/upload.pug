extends layouts/main

block content
    if errorMessage 
        span.errorMessage=errorMessage
    form(action=`/videos/upload`, method="post", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", name="video", id="video", required, accept="video/*")
        input(type="text", name="title", placeholder="Title")
        textarea(name="description", placeholder="Description")
        input(placeholder="Hashtags, separated by comma", type="text", name="hashtags")

        input(type="submit", value="upload video").inputBtn
